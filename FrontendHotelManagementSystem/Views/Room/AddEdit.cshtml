@model FrontendHotelManagementSystem.Models.Room
@{
    ViewData["Title"] = Model.RoomId == 0 ? "Add Room" : "Edit Room";
}
<div class="container-fluid mt-4">
    <h2>@ViewData["Title"]</h2>
    <h3 class="text-danger">@TempData["Error"]</h3>
    <form asp-action="AddEdit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" asp-for="RoomId" />
        <div class="mb-3">
            <label asp-for="RoomNumber" class="form-label"></label>
            <input asp-for="RoomNumber" class="form-control" />
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RoomTypeId" class="form-label"></label>
            <select asp-for="RoomTypeId" asp-items="ViewBag.RoomTypes" class="form-control">
                <option value="">-- Select Room Type --</option>
            </select>
            <span asp-validation-for="RoomTypeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Capacity" class="form-label"></label>
            <input asp-for="Capacity" class="form-control" type="number" min="1" max="20" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PricePerNight" class="form-label"></label>
            <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="PricePerNight" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsAvaliable" class="form-check-input" type="checkbox" />
                <label asp-for="IsAvaliable" class="form-check-label"></label>
                <span asp-validation-for="IsAvaliable" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">@((Model.RoomId == 0) ? "Add" : "Update")</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 