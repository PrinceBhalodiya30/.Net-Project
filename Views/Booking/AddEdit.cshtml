@model FrontendHotelManagementSystem.Models.Booking
@{
    ViewData["Title"] = Model.BookingId == 0 ? "New Booking" : "Edit Booking";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">@ViewData["Title"]</h1>
        <p class="page-subtitle">@(Model.BookingId == 0 ? "Create a new reservation" : "Update booking details")</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<!-- Error Alert -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
    </div>
}

<!-- Booking Form -->
<div class="form-container">
    <form asp-action="AddEdit" method="post">
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        <input type="hidden" asp-for="BookingId" />
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CustomerId" class="form-label">
                    <i class="bi bi-person me-2"></i>Customer
                </label>
                <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-select">
                    <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="RoomId" class="form-label">
                    <i class="bi bi-door-open me-2"></i>Room
                </label>
                <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-select">
                    <option value="">-- Select Room --</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="IdproofType" class="form-label">
                    <i class="bi bi-card-text me-2"></i>ID Proof Type
                </label>
                <select asp-for="IdproofType" class="form-select">
                    <option value="">-- Select ID Type --</option>
                    <option value="Passport">Passport</option>
                    <option value="Driver License">Driver License</option>
                    <option value="National ID">National ID</option>
                    <option value="Voter ID">Voter ID</option>
                </select>
                <span asp-validation-for="IdproofType" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="IdproofTypeNo" class="form-label">
                    <i class="bi bi-credit-card me-2"></i>ID Proof Number
                </label>
                <input asp-for="IdproofTypeNo" class="form-control" placeholder="Enter ID number" />
                <span asp-validation-for="IdproofTypeNo" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3">
            <label asp-for="IdproofUrl" class="form-label">
                <i class="bi bi-link me-2"></i>ID Proof Document URL
            </label>
            <input asp-for="IdproofUrl" class="form-control" placeholder="Enter document URL (optional)" />
            <span asp-validation-for="IdproofUrl" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="CheckInDate" class="form-label">
                    <i class="bi bi-calendar-check me-2"></i>Check-in Date
                </label>
                <input asp-for="CheckInDate" type="date" class="form-control" />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="CheckOutDate" class="form-label">
                    <i class="bi bi-calendar-x me-2"></i>Check-out Date
                </label>
                <input asp-for="CheckOutDate" type="date" class="form-control" />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="NumberOfGuests" class="form-label">
                    <i class="bi bi-people me-2"></i>Number of Adults
                </label>
                <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="NumberOfChildrens" class="form-label">
                    <i class="bi bi-person me-2"></i>Number of Children
                </label>
                <input asp-for="NumberOfChildrens" class="form-control" type="number" min="0" max="10" />
                <span asp-validation-for="NumberOfChildrens" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="TotalAmount" class="form-label">
                    <i class="bi bi-currency-dollar me-2"></i>Total Amount
                </label>
                <input asp-for="TotalAmount" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="DiscountAmount" class="form-label">
                    <i class="bi bi-percent me-2"></i>Discount Amount
                </label>
                <input asp-for="DiscountAmount" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-4">
            <label asp-for="BookingStatus" class="form-label">
                <i class="bi bi-info-circle me-2"></i>Booking Status
            </label>
            <select asp-for="BookingStatus" class="form-select">
                <option value="">-- Select Status --</option>
                <option value="Pending">Pending</option>
                <option value="Confirmed">Confirmed</option>
                <option value="Cancelled">Cancelled</option>
                <option value="Completed">Completed</option>
            </select>
            <span asp-validation-for="BookingStatus" class="text-danger"></span>
        </div>
        
        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-2"></i>
                @(Model.BookingId == 0 ? "Create Booking" : "Update Booking")
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle me-2"></i>Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}