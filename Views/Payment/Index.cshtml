@model List<FrontendHotelManagementSystem.Models.Payment>
@{
    ViewData["Title"] = "Payments";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Payments</h1>
        <p class="page-subtitle">Manage payment transactions</p>
    </div>
    <a asp-action="AddEdit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Add Payment
    </a>
</div>

<!-- Error Alert -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
    </div>
}

<!-- Payments Table -->
<div class="table-container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th><i class="bi bi-hash me-2"></i>Payment ID</th>
                    <th><i class="bi bi-calendar-check me-2"></i>Booking</th>
                    <th><i class="bi bi-calendar me-2"></i>Payment Date</th>
                    <th><i class="bi bi-currency-dollar me-2"></i>Amount</th>
                    <th><i class="bi bi-credit-card me-2"></i>Payment Mode</th>
                    <th><i class="bi bi-gear me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td><strong>#@payment.PaymentId</strong></td>
                            <td>
                                <span class="badge bg-info">
                                    <i class="bi bi-calendar-check me-1"></i>Booking #@payment.BookingId
                                </span>
                            </td>
                            <td>@payment.PaymentDate?.ToString("MMM dd, yyyy")</td>
                            <td><strong class="text-success">@payment.AmountPaid?.ToString("C")</strong></td>
                            <td>
                                @{
                                    var modeIcon = payment.PaymentMode?.ToLower() switch
                                    {
                                        "cash" => "bi-cash",
                                        "credit card" => "bi-credit-card",
                                        "debit card" => "bi-credit-card-2-front",
                                        "bank transfer" => "bi-bank",
                                        "upi" => "bi-phone",
                                        "digital wallet" => "bi-wallet2",
                                        _ => "bi-credit-card"
                                    };
                                }
                                <span class="badge bg-primary">
                                    <i class="@modeIcon me-1"></i>@payment.PaymentMode
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="AddEdit" asp-route-id="@payment.PaymentId" 
                                       class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@payment.PaymentId" 
                                       class="btn btn-danger btn-sm" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this payment?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <i class="bi bi-credit-card fs-1 text-muted"></i>
                            <p class="text-muted mt-3">No payments found</p>
                            <a asp-action="AddEdit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>Add First Payment
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>