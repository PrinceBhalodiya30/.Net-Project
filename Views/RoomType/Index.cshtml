@model List<FrontendHotelManagementSystem.Models.RoomType>
@{
    ViewData["Title"] = "Room Types";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Room Types</h1>
        <p class="page-subtitle">Manage different types of rooms</p>
    </div>
    <a asp-action="AddEdit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Add Room Type
    </a>
</div>

<!-- Error Alert -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
    </div>
}

<!-- Room Types Table -->
<div class="table-container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th><i class="bi bi-hash me-2"></i>ID</th>
                    <th><i class="bi bi-house me-2"></i>Room Type Name</th>
                    <th><i class="bi bi-gear me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var roomType in Model)
                    {
                        <tr>
                            <td><strong>#@roomType.RoomTypeId</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="room-type-icon me-3">
                                        <i class="bi bi-house"></i>
                                    </div>
                                    <strong>@roomType.RoomTypeName</strong>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="AddEdit" asp-route-id="@roomType.RoomTypeId" 
                                       class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@roomType.RoomTypeId" 
                                       class="btn btn-danger btn-sm" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this room type?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center py-5">
                            <i class="bi bi-house fs-1 text-muted"></i>
                            <p class="text-muted mt-3">No room types found</p>
                            <a asp-action="AddEdit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>Add First Room Type
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .room-type-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        background: linear-gradient(135deg, #27ae60, #229954);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
</style>