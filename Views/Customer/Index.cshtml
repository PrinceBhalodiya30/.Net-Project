@model List<FrontendHotelManagementSystem.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Customers</h1>
        <p class="page-subtitle">Manage customer information</p>
    </div>
    <a asp-action="AddEdit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Add New Customer
    </a>
</div>

<!-- Error Alert -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
    </div>
}

<!-- Customers Table -->
<div class="table-container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th><i class="bi bi-person me-2"></i>Full Name</th>
                    <th><i class="bi bi-gender-ambiguous me-2"></i>Gender</th>
                    <th><i class="bi bi-telephone me-2"></i>Phone</th>
                    <th><i class="bi bi-envelope me-2"></i>Email</th>
                    <th><i class="bi bi-geo-alt me-2"></i>Address</th>
                    <th><i class="bi bi-gear me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3">
                                        @customer.FullName?.Substring(0, 1).ToUpper()
                                    </div>
                                    <strong>@customer.FullName</strong>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">@customer.Gender</span>
                            </td>
                            <td>@customer.PhoneNumber</td>
                            <td>@customer.Email</td>
                            <td>@customer.Address</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="AddEdit" asp-route-id="@customer.CustomerId" 
                                       class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@customer.CustomerId" 
                                       class="btn btn-danger btn-sm" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this customer?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <i class="bi bi-people fs-1 text-muted"></i>
                            <p class="text-muted mt-3">No customers found</p>
                            <a asp-action="AddEdit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>Add First Customer
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #3498db, #2980b9);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }
</style>