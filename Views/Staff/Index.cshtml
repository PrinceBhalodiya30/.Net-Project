@model List<FrontendHotelManagementSystem.Models.Staff>
@{
    ViewData["Title"] = "Staff";
}

<!-- Page Header -->
<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h1 class="page-title">Staff Management</h1>
        <p class="page-subtitle">Manage hotel staff members</p>
    </div>
    <a asp-action="AddEdit" class="btn btn-success">
        <i class="bi bi-plus-circle me-2"></i>Add New Staff
    </a>
</div>

<!-- Error Alert -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["Error"]
    </div>
}

<!-- Staff Table -->
<div class="table-container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th><i class="bi bi-person me-2"></i>Full Name</th>
                    <th><i class="bi bi-briefcase me-2"></i>Role</th>
                    <th><i class="bi bi-telephone me-2"></i>Contact</th>
                    <th><i class="bi bi-envelope me-2"></i>Email</th>
                    <th><i class="bi bi-calendar me-2"></i>Joining Date</th>
                    <th><i class="bi bi-gear me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="staff-avatar me-3">
                                        @staff.FullName?.Substring(0, 1).ToUpper()
                                    </div>
                                    <strong>@staff.FullName</strong>
                                </div>
                            </td>
                            <td>
                                @{
                                    var roleClass = staff.Role?.ToLower() switch
                                    {
                                        "manager" => "bg-primary",
                                        "receptionist" => "bg-info",
                                        "housekeeper" => "bg-success",
                                        "maintenance" => "bg-warning",
                                        "chef" => "bg-danger",
                                        "waiter" => "bg-secondary",
                                        "security" => "bg-dark",
                                        _ => "bg-secondary"
                                    };
                                    
                                    var roleIcon = staff.Role?.ToLower() switch
                                    {
                                        "manager" => "bi-person-gear",
                                        "receptionist" => "bi-person-workspace",
                                        "housekeeper" => "bi-house-gear",
                                        "maintenance" => "bi-tools",
                                        "chef" => "bi-egg-fried",
                                        "waiter" => "bi-cup-hot",
                                        "security" => "bi-shield-check",
                                        _ => "bi-person"
                                    };
                                }
                                <span class="badge @roleClass">
                                    <i class="@roleIcon me-1"></i>@staff.Role
                                </span>
                            </td>
                            <td>@staff.ContactNumber</td>
                            <td>@staff.Email</td>
                            <td>@staff.JoiningDate?.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="AddEdit" asp-route-id="@staff.StaffId" 
                                       class="btn btn-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@staff.StaffId" 
                                       class="btn btn-danger btn-sm" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this staff member?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <i class="bi bi-person-badge fs-1 text-muted"></i>
                            <p class="text-muted mt-3">No staff members found</p>
                            <a asp-action="AddEdit" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>Add First Staff Member
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .staff-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #2c3e50, #34495e);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
    }
</style>