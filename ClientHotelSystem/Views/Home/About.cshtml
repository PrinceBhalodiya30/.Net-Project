    ViewData["Title"] = "About Us";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title">About Luxury Hotel</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
