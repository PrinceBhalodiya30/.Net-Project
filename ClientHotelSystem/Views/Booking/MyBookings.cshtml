@model List<ClientHotelSystem.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title">My Bookings</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("SearchBookings")">Find Bookings</a></li>
                <li class="breadcrumb-item active">My Bookings</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Bookings List -->
<section class="section">
    <div class="container">
        @if (ViewBag.Customer != null)
        {
            var customer = (ClientHotelSystem.Models.Customer)ViewBag.Customer;
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="font-serif mb-2">Welcome back, @customer.FullName!</h5>
                            <p class="text-muted mb-0">Here are all your bookings with us</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>New Booking
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var booking in Model)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="font-serif mb-0">Booking #@booking.BookingId</h5>
                                    @{
                                        var statusClass = booking.BookingStatus?.ToLower() switch
                                        {
                                            "confirmed" => "bg-success",
                                            "pending" => "bg-warning text-dark",
                                            "cancelled" => "bg-danger",
                                            "completed" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@booking.BookingStatus</span>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">Room</small>
                                        <div class="fw-bold">@booking.RoomNumber</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Total Amount</small>
                                        <div class="fw-bold text-primary">@booking.TotalAmount?.ToString("C")</div>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">Check-in</small>
                                        <div>@booking.CheckInDate?.ToString("MMM dd, yyyy")</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Check-out</small>
                                        <div>@booking.CheckOutDate?.ToString("MMM dd, yyyy")</div>
                                    </div>
                                </div>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">Guests</small>
                                        <div>@booking.NumberOfGuests Adults
                                            @if (booking.NumberOfChildrens > 0)
                                            {
                                                <span>, @booking.NumberOfChildrens Children</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">ID Proof</small>
                                        <div>@booking.IdproofType</div>
                                    </div>
                                </div>
                                
                                @if (booking.DiscountAmount > 0)
                                {
                                    <div class="alert alert-success py-2" role="alert">
                                        <i class="bi bi-tag me-2"></i>
                                        <small>Discount Applied: @booking.DiscountAmount?.ToString("C")</small>
                                    </div>
                                }
                                
                                <div class="d-flex gap-2 mt-3">
                                    @if (booking.BookingStatus?.ToLower() == "pending")
                                    {
                                        <button class="btn btn-outline-danger btn-sm" onclick="cancelBooking(@booking.BookingId)">
                                            <i class="bi bi-x-circle me-1"></i>Cancel
                                        </button>
                                    }
                                    
                                    <button class="btn btn-outline-primary btn-sm" onclick="printBooking(@booking.BookingId)">
                                        <i class="bi bi-printer me-1"></i>Print
                                    </button>
                                    
                                    <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-headset me-1"></i>Support
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3 text-muted">No Bookings Found</h4>
                <p class="text-muted mb-4">You don't have any bookings yet. Start planning your perfect stay!</p>
                
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary btn-lg">
                        <i class="bi bi-door-open me-2"></i>Browse Rooms
                    </a>
                    <a href="@Url.Action("SearchBookings")" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-search me-2"></i>Search Again
                    </a>
                </div>
            </div>
        }
        
        <!-- Customer Support -->
        <div class="card mt-5">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="font-serif mb-2">Need Assistance?</h5>
                        <p class="text-muted mb-0">Our customer service team is available 24/7 to help you with any questions or concerns.</p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="d-flex gap-2 justify-content-md-end flex-wrap">
                            <a href="tel:+15551234567" class="btn btn-outline-primary">
                                <i class="bi bi-telephone me-2"></i>Call Us
                            </a>
                            <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-primary">
                                <i class="bi bi-envelope me-2"></i>Contact
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script>
    function cancelBooking(bookingId) {
        if (confirm('Are you sure you want to cancel this booking? This action cannot be undone.')) {
            // In a real application, this would make an API call to cancel the booking
            alert('Booking cancellation request submitted. You will receive a confirmation email shortly.');
        }
    }
    
    function printBooking(bookingId) {
        // In a real application, this would generate a printable booking confirmation
        window.print();
    }
</script>
}