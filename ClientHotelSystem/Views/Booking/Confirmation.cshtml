@{
    ViewData["Title"] = "Booking Confirmation";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1 class="page-title">Booking Confirmation</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item active">Confirmation</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Confirmation Content -->
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body text-center p-5">
                        <div class="mb-4">
                            <i class="bi bi-check-circle" style="font-size: 4rem; color: var(--success-color);"></i>
                        </div>
                        
                        <h2 class="font-serif mb-4">Thank You for Your Reservation!</h2>
                        
                        <p class="lead mb-4">Your booking request has been submitted successfully. We will review your reservation and contact you within 24 hours to confirm the details.</p>
                        
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>What's Next?</strong> Our reservations team will verify availability and send you a confirmation email with your booking details and payment instructions.
                        </div>
                        
                        <div class="row text-start mt-5">
                            <div class="col-md-6">
                                <h5 class="font-serif mb-3">Important Information</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="bi bi-clock text-primary me-2"></i>Check-in: 3:00 PM</li>
                                    <li class="mb-2"><i class="bi bi-clock text-primary me-2"></i>Check-out: 11:00 AM</li>
                                    <li class="mb-2"><i class="bi bi-shield-check text-primary me-2"></i>Free cancellation up to 24 hours</li>
                                    <li class="mb-2"><i class="bi bi-wifi text-primary me-2"></i>Complimentary WiFi included</li>
                                </ul>
                            </div>
                            
                            <div class="col-md-6">
                                <h5 class="font-serif mb-3">Contact Information</h5>
                                <ul class="list-unstyled">
                                    <li class="mb-2"><i class="bi bi-telephone text-primary me-2"></i>+1 (555) 123-4567</li>
                                    <li class="mb-2"><i class="bi bi-envelope text-primary me-2"></i>reservations@luxuryhotel.com</li>
                                    <li class="mb-2"><i class="bi bi-geo-alt text-primary me-2"></i>123 Luxury Street, City</li>
                                    <li class="mb-2"><i class="bi bi-headset text-primary me-2"></i>24/7 Customer Support</li>
                                </ul>
                            </div>
                        </div>
                        
                        <div class="d-flex gap-3 justify-content-center mt-5 flex-wrap">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                                <i class="bi bi-house me-2"></i>Back to Home
                            </a>
                            <a href="@Url.Action("SearchBookings")" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-search me-2"></i>Track My Booking
                            </a>
                            <a href="@Url.Action("Index", "Rooms")" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-door-open me-2"></i>View More Rooms
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Additional Services -->
                <div class="row mt-5">
                    <div class="col-md-4 mb-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-car-front" style="font-size: 2rem; color: var(--accent-color);"></i>
                                <h6 class="mt-3">Airport Transfer</h6>
                                <p class="small text-muted">Complimentary pickup service available</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-cup-hot" style="font-size: 2rem; color: var(--accent-color);"></i>
                                <h6 class="mt-3">Dining</h6>
                                <p class="small text-muted">World-class restaurant and room service</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-water" style="font-size: 2rem; color: var(--accent-color);"></i>
                                <h6 class="mt-3">Spa & Wellness</h6>
                                <p class="small text-muted">Relax and rejuvenate at our spa</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>